<main>
<div class="container single-food">

<h1><%= @food.name %></h1>
<div class="food-info">
  <p>Measurement unit: <%= @food.measurement_unit %></p>
  <p>Unit price: <%= @food.price %></p>
  <p>Quantity: <%= @food.quantity %></p>
</div>

<div>
  <%= link_to "Back to foods", foods_path %>
  <%= button_to "Destroy this food", @food, method: :delete %>
</div>
</div>
</main>