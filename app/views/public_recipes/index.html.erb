<main>
<div class="container public-recipes">
<h2>Public Recipes</h2>

<ul>
  <% @public_recipes.each do |recipe| %>
    <li class="row">
      <a href=<%= "recipes/#{recipe.id}" %>>      
        <div>
          <h3><%= recipe.name %></h3>
          <p>by: <%= recipe.user.name %></p>
        </div>
        <div>
          <h3>Total food: <%= recipe.recipe_food.length %></h3>
          <p>Total price: <%= RecipeFood.total_price(recipe.recipe_food) %>$</p>
        </div>
      </a>
    </li>
  <% end %>
</ul>
</div>